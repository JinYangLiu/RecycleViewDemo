<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="mr.ljy.recycleviewdemo.activity.AddHeadActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="wrap_content">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            android:layout_height="400dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageViewPlaceHolder"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:layout_height="@dimen/imgtop_width"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/frameLayoutTitle"
                app:layout_collapseMode="parallax"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/pink"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/linearLayoutTitle"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/title_margin"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom|center"
                        android:text="@string/title_qy"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/title_margin"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom|right"
                        android:text="@string/content_qy"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_centerInParent="true"
        app:behavior_overlapTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:background="@color/pink"
        app:layout_anchor="@id/frameLayoutTitle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_height="@dimen/title__final_width">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <Space
                android:layout_width="@dimen/img__final_width"
                android:layout_height="@dimen/img__final_width"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textViewToolbarTitle"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/title_qy"
                android:textColor="#fff"
                android:textSize="18sp"
                android:visibility="invisible"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImgView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/margin_top"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        app:layout_behavior="mr.ljy.recycleviewdemo.utils.AvatarImageBehavior"
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_width"/>
</android.support.design.widget.CoordinatorLayout>
